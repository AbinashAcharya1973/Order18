<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutViewBalance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.order18.ViewBalance" >
    <TextView
        android:id="@+id/txtTotalDr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="52dp"
        android:text="Total Debit"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/txtTotalCr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTotalDr"
        android:layout_marginTop="20dp"
        android:text="Total Credit"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/CurBalance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTotalCr"
        android:layout_marginTop="37dp"
        android:text="Current Balance"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
